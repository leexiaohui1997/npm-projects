{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],

    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@example/*": ["apps/example/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "coverage"]
}
